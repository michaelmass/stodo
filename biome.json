{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "include": ["**/*.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noConsoleLog": "error"
      },
      "correctness": { "noChildrenProp": "error" },
      "a11y": {
        "useAltText": "error",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error",
        "noSvgWithoutTitle": "error"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "noExtraBooleanCast": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 320
  }
}
